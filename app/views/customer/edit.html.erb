<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
    </section>
    <section class="content">
    <div class="box box-primary" id="">
        <div class="box-header with-border">
          <h3 class="box-title">Editar Cliente</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_with  model: @customer, url: '/customer/update' do |f| %>
            <!-- text input -->
            <div class="form-group d-none">
              <label>Nome</label>
              <%= f.text_field :id, class:'form-control clear-field'%>
            </div>
            <div class="form-group">
              <label>Nome</label>
              <%= f.text_field :name, class:'form-control clear-field'%>
            </div>
            <div class="form-group">
              <label>CPF</label>
              <%= f.text_field :cpf, class:'form-control clear-field'%>
            </div>
            <div class="form-group">
              <label>Endere√ßo</label>
              <%= f.text_field :address, class:'form-control clear-field'%>
            </div>
            <div class="form-group">
              <label>Telefone</label>
              <%= f.text_field :phone, class:'form-control clear-field'%>
            </div>
            <div class="box-footer">
              <%= f.submit "Salvar", class:'btn btn-primary', id:'new-loan-submit', id:'new-customer-submit'%>
              <%= link_to 'Voltar', show_customer_path(@customer.id), class:'btn btn-danger'%>
            </div>
            
          <% end %>
        </div>
      </div>
    </section>
</div>