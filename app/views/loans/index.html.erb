   <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
      
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Main row -->
      <div class="row">
        <div class='col-md-12'>
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Emprestimos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="table table-striped">
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Nome</th>
                  <th>Loja</th>
                  <th>Valor</th>
                  <th>Parcelas</th>
                  <th>Data do Emprestimo</th>
                </tr>
                <% @count = 1%>
                <% @loans.each do |loan| %>
                <tr style="font-weight: normal">
                  <td><%= @count %>.</td>
                  <% @count += 1 %>
                  <td><%= loan.name%></td>
                  <td><%= loan.store%></td>
                  <td><%= loan.amount%></td>
                  <td><%= loan.qtyPortion%></td>
                  <td><%= loan.created_at.strftime('%d/%m/%Y')%></td>
                </tr>
                <% end %>
              </table>
            </div>
        </div>
      </div>
      <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
  </div>