   <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
      
    </section>
 
    <!-- Main content -->
    <section class="content">
      <button class='btn btn-primary' id='new-loan' style="margin-bottom: 5px">Novo Emprestimo</button>
      <div class="box box-primary d-none" id="new-loan-form">
        <div class="box-header with-border">
          <h3 class="box-title">Novo Emprestimo</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_with  model: @newLoan, url: '/loan/createloan' do |f| %>
            <!-- text input -->
            <div class="form-group">
              <label>Nome</label>
              <%= f.text_field :name, class:'form-control'%>
            </div>
            <div class="form-group">
              <label>Loja</label>
              <%= f.text_field :store, class:'form-control'%>
            </div>
            <div class="form-group">
              <label>Valor</label>
              <%= f.text_field :amount, class:'form-control'%>
            </div>
            <div class="form-group">
              <label>Parcelas &nbsp</label>
              <%= f.select :qtyPortion, [1,2,3,4,5], class:'form-control'%>
            </div>
            <div class="form-group">
              <label>Primeiro Pagamento</label>
              <%= f.text_field :firstPayment, class:'form-control', id: "firstPayment"%>
            </div>
            <div class="box-footer">
              <%= f.submit "Cadastrar", class:'btn btn-primary', id:'new-loan-submit'%> <button class='btn btn-danger' id='cancel-loan'>Cancelar</button>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Main row -->
      <div class="row">
        <div class='col-md-12'>
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Emprestimos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="table table-striped">
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Nome</th>
                  <th>Loja</th>
                  <th>Valor</th>
                  <th>Parcelas</th>
                  <th>Data do Emprestimo</th>
                </tr>
                <% @count = 1%>
                <% @loans.each do |loan| %>
                <tr style="font-weight: normal">
                  <td><%= @count %>.</td>
                  <% @count += 1 %>
                  <td><%= loan.name%></td>
                  <td><%= loan.store%></td>
                  <td><%= loan.amount%></td>
                  <td><%= loan.qtyPortion%></td>
                  <td><%= loan.created_at.strftime('%d/%m/%Y')%></td>
                </tr>
                <% end %>
              </table>
            </div>
        </div>
      </div>
      <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
  </div>