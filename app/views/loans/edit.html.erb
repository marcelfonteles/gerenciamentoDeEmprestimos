<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
    </section>
    <section class="content">
      <div class="box box-primary" id="">
        <div class="box-header with-border">
          <h3 class="box-title">Editar Emprestimo</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <%= form_with  model: @loan, url: '/loan/update' do |f| %>
              <!-- text input -->
              <div class='d-none'>
                <%= f.text_field :customer_id, class:'form-control clear-field', value: @customer_id%>
                <%= f.text_field :id, class:'form-control clear-field', value: @loan.id%>
              </div>
              <div class="form-group">
                <label>Loja</label>
                <%= f.text_field :store, class:'form-control clear-field'%>
              </div>
              <div class="form-group">
                <label>Valor</label>
                <%= f.text_field :amount, class:'form-control clear-field'%>
              </div>
              <div class="form-group">
                <div class='row'>
                  <div class='col-md-3'>
                    <label>Parcela 1</label>
                    <%= f.text_field :portion1, class:'form-control clear-field'%>
                  </div>
                  <div class='col-md-3'>
                    <label>Pagamento da 1ª parcela</label>
                    <%= f.text_field :date_p1, class:'form-control', value: @loan.date_p1.strftime('%d/%m/%Y'), id:'date_p1'%>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class='row'>
                  <div class='col-md-3'>
                    <label>Parcela 2</label>
                    <%= f.text_field :portion2, class:'form-control clear-field'%>
                  </div>
                  <div class='col-md-3'>
                    <label>Pagamento da 2ª parcela</label>
                    <%= f.text_field :date_p2, class:'form-control', value: @loan.date_p2.strftime('%d/%m/%Y'), id:'date_p2'%>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class='row'>
                  <div class='col-md-3'>
                    <label>Parcela 3</label>
                    <%= f.text_field :portion3, class:'form-control clear-field'%>
                  </div>
                  <div class='col-md-3'>
                    <label>Pagamento da 3ª parcela</label>
                    <%= f.text_field :date_p3, class:'form-control', value: @loan.date_p3.strftime('%d/%m/%Y'), id:'date_p3'%>
                  </div>
                </div>
              </div>
              <div class="box-footer">
                <%= f.submit "Salvar", class:'btn btn-primary', id:'new-loan-submit'%>
                <%= link_to 'Voltar', show_customer_path(@customer_id), class:'btn btn-danger'%>
              </div>
            <% end %>
          </div>
    </section>
</div>