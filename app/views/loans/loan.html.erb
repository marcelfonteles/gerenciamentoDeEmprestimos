<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
    </section>
    <section class="content">
      <div class="row">
        <div class='col-md-12'>
          <% if flash[:notice] %>
            <%= flash[:notice] %>
          <% end %>
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Emprestimo</h3>
            </div>
            <div class="box-body">
              <table class="table table-striped">
                <tr>
                  <th style="width: 10px">#</th>
                  
                  <th>Loja</th>
                  <th>Valor</th>
                  <th>1ª Parcela</th>
                  <th>2ª Parcela</th>
                  <th>3ª Parcela</th>
                </tr>
                <tr style="font-weight: normal">
                  <td>1</td>
                  
                  <td><%= @loan.store %></td>
                  <td><%= @loan.amount %></td>
                  <% if @loan.paid_p1 %>
                    <td><span class='text-success'><%= @loan.portion1 %> (<%= @loan.date_p1.strftime('%d/%m/%Y')%>)</span></td>
                  <% else %>
                    <td><span class='text-danger'><%= @loan.portion1 %> (<%= @loan.date_p1.strftime('%d/%m/%Y')%>)</span></td>
                  <% end %>
                  <% if @loan.paid_p2 %>
                    <td><span class='text-success'><%= @loan.portion2 %> (<%= @loan.date_p2.strftime('%d/%m/%Y')%>)</span></td>
                  <% else %>
                    <td><span class='text-danger'><%= @loan.portion2 %> (<%= @loan.date_p2.strftime('%d/%m/%Y')%>)</span></td>
                  <% end %>
                  <% if @loan.paid_p3 %>
                    <td><span class='text-success'><%= @loan.portion3 %> (<%= @loan.date_p3.strftime('%d/%m/%Y')%>)</span></td>
                  <% else %>
                    <td><span class='text-danger'><%= @loan.portion3 %> (<%= @loan.date_p3.strftime('%d/%m/%Y')%>)</span></td>
                  <% end %>
                </tr>
                <tr>
                  
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>
                      <%= link_to 'Confirmar', confirm_payment_path(@loan.id, 1), method: :post, data: {confirm: 'Tem certeza que deseja confirmar o pagamento?'}, class:'btn btn-success btn-sm'%>
                      <%= link_to 'Cancelar', cancel_payment_path(@loan.id, 1), method: :post, data: {confirm: 'Tem certeza que deseja cancelar o pagamento?'}, class:'btn btn-danger btn-sm' %>
                  </td>
                  <td>
                    <%= link_to 'Confirmar', confirm_payment_path(@loan.id, 2), method: :post, data: {confirm: 'Tem certeza que deseja confirmar o pagamento?'}, class:'btn btn-success btn-sm'%>
                    <%= link_to 'Cancelar', cancel_payment_path(@loan.id, 2), method: :post, data: {confirm: 'Tem certeza que deseja cancelar o pagamento?'}, class:'btn btn-danger btn-sm' %>
                  </td>
                  <td>
                    <%= link_to 'Confirmar', confirm_payment_path(@loan.id, 3), method: :post, data: {confirm: 'Tem certeza que deseja confirmar o pagamento?'}, class:'btn btn-success btn-sm'%>
                    <%= link_to 'Cancelar', cancel_payment_path(@loan.id, 3), method: :post, data: {confirm: 'Tem certeza que deseja cancelar o pagamento?'}, class:'btn btn-danger btn-sm' %>
                  </td>
                </tr>
              </table>
              <%= link_to 'Voltar', show_customer_path(@loan.customer.id), class:'btn btn-primary btn-sm'%>
            </div>
          </div>
        </div>
      </div>
    </section>